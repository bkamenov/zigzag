{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },

  "AllowedHosts": "*.hostname.com",

  "MongoDB": {
    "ConnectionString": "mongodb://db.hostname.com:27017",
    "Database": "local"
  },

  "JwtSettings": {
    "TokenLifetimeHours": 1
  },

  "Kestrel": {
    "Endpoints": {
      "Https": {
        "Url": "https://auth.hostname.com",
        "Certificate": {
          "Path": "./ssl-development/certificate.crt",
          "KeyPath": "./ssl-development/certificate.key"
        }
      }
    }
  }
}
